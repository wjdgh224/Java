import java.util.Scanner;

public class practice {
	public static void print() {
		Scanner scanner = new Scanner(System.in);
		System.out.print("정수를 입력하시오>>");
		int n = scanner.nextInt();
		
		for(int i=n; i>0; i--) {
			for(int j=0; j<i; j++)
				System.out.print("*");
			System.out.print("\n");
		}
		/*
		for(int i=0; i<n; i++) {
			for(int j=i; j<n; j++)
				System.out.print("*");
			System.out.print("\n");
		}
		*/
				
	}
	public static void main(String[] args) {
		print();
	}
}
